@using Shared.Domain.Enums
@using Shared.Application.Utility
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model PostModule.Application.Contract.CityApplication.CreateCityModel
@{
	var stateTitle = ViewData["StateTitle"] as string;
	ViewData["Title"] = "افزودن شهر جدید به استان  " +stateTitle;
	ViewData["Selected"] = "Cities";
}

<form class="col col-12" style="margin-right: 200px; margin-left: 200px" asp-action="Create" method="post" onsubmit="sweetAlertConfirmSubmit(event)" >
	<div clas="col col-lg-6">
		@Html.HiddenFor(x=> x.StateId)
		@Html.EditorFor(x => x.Title)

	</div>

	<button type="submit" class="btn btn-success">
		ثبت
	</button>
	<a class="btn btn-danger "asp-action="Index" asp-route-id="@Model.StateId"  onclick="sweetAlertConfirmLink(event,'آیا مطمعنید؟')">
		انصراف
	</a>

</form>