@model  Query.Contract.Admin.SendEmail.SendEmailAdminQueryModel
@{

	ViewData["Title"] = "جزییات ایمیل";
	ViewData["Selected"] = "SendEmails"; 

}

@if (Model != null)
{
	<div class="row">
		<div class="col-xs-12">
			<div class="box">
				<div class="box-header">
				</div>
				<div class="box-body">
					<hr />

					<dl class="dl-horizontal">

						<dt>
							عنوان
						</dt>
						<dd>
							@Model.Title
						</dd>
						<dt>
							تاریخ نوشته شدن ایمیل
						</dt>
						<dd>
							@Model.CreateDate
						</dd>
						<dt>
							متن کامل
						</dt>
						<dd>
							@Html.Raw(@Model.Text)
						</dd>
						
					</dl>
				</div>
				<hr/>
				<a class="btn btn-danger" asp-action="Index">بازگشت</a>
			</div>
		</div>
		
	</div>
}
else
{
	<h1>مشکلی پیش آمده.. دوباره امتحان کنید</h1>
}
