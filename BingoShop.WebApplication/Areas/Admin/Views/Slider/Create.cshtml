@model Site.Application.Contract.SliderApplication.Command.CreateSlider
@using Shared.Domain.Enums;
@{
    ViewData["Title"] = "افزودن اسلاید ";
	ViewData["Selected"] = "Slider";
}
<div class="row">
    <div class="col-xs-12">
        <div class="box box-success">
            <form method="post" role="form" enctype="multipart/form-data" onsubmit="sweetAlertConfirmSubmit(event)">
                <div class="box-body">
                    <div class="col-12">
                        <div class="col-md-6"> 
                            <div class="form-group">
                                <label asp-for="ImageAlt"></label>
                                <input class="form-control" asp-for="ImageAlt">
                                <span class="text-danger" asp-validation-for="ImageAlt"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Url"></label>
                                <input class="form-control" asp-for="Url">
                                <span class="text-danger" asp-validation-for="Url"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <h3>
                                تصویر مربوطه
                            </h3>
                            <img width="300px" id="img_preview" class="img-thumbnail" src="" />
                            <div class="form-group">
								<input type="file" id="file_input" class="form-control" asp-for="ImageFile">
                                <span class="text-danger" asp-validation-for="ImageFile"></span>
                            </div>
                        </div>
                    </div>
                    
                   
                </div>
                <!-- /.box-body -->

                <div class="box-footer">
	                <button type="submit" class="btn btn-success">ارسال</button>
	                <a class=" btn btn-danger" asp-action="Index" onclick="sweetAlertConfirmLink(event,'آیا مطمعنید؟')">بازگشت</a>

                </div>
            </form>
        </div>
    </div>
</div>