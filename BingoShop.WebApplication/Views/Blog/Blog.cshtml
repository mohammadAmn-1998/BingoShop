@using Shared.Application.Utility
@using BingoShop.WebApplication.Utility
@using Shared.Application.Services
@using Shared.Domain.Enums
@model Query.Contract.Ui.Blog.SingleBlogUIQueryModel
@inject IAuthService _AuthService;
@{

	ViewData["Title"] = Model?.Title.ToShortText();
	Layout = "Blog/_BlogLayout";
	var userFullName = _AuthService.GetUserFullName();
}

@section Seo
{
	
	<partial name="Blog/_SeoPartial" model="Model.Seo"/>

}

<partial name="Blog/_BreadCrumbsPartial" model="Model.BreadCrumbs"/>

<div class="row">
	
	<div class="col-lg-8 blog__content mb-72">
		<div class="content-box">
			


			@if (Model.Id > 0)
			{
				<article class="entry mb-0">

					<div class="single-post__entry-header entry__header">
						<a href="/Blog/Blogs?slug=@((Model.SubCategoryId >0 ? Model.SubCategory.Slug : Model.Category.Slug))" class="entry__meta-category entry__meta-category--label entry__meta-category--@RandomCategoryColorMaker.GenerateRandomColor()">@((Model.SubCategoryId > 0 ? Model.SubCategory.Title : Model.Category.Title))</a>
						<h1 class="single-post__entry-title">
							@Model.Title
						</h1>

						<div class="entry__meta-holder">
							<ul class="entry__meta">
								<li class="entry__meta-author">
									<span>نویسنده:</span>
									<a href="#">@Model.Author</a>
								</li>
								<li class="entry__meta-date">
									@Model.CreateDate
								</li>
							</ul>

							<ul class="entry__meta">
								<li class="entry__meta-views">
									<i class="ui-eye"></i>
									<span>@Model.TotalVisits.ToString().ToPersianNumbers()</span>
								</li>
								<li class="entry__meta-comments">
									<a href="#">
										<i class="ui-chat-empty"></i>@Model.TotalComments.ToString().ToPersianNumbers()
									</a>
								</li>
							</ul>
						</div>
					</div> <!-- end entry header -->

					<div class="entry__img-holder">
						<img src="@Directories.GetBlogImageFullPath(Model.ImageName,null)" alt="@Model.ImageAlt" class="entry__img">
					</div>

					<div class="">

						

						<div class="entry__article">
							@Html.Raw(Model.Content)

						</div> <!-- end entry article -->
					</div> <!-- end entry article wrap -->
					<!-- Author -->
					<div class="entry-author clearfix">
						<img alt="" data-src="@Directories.GetUserAvatarFullPath(Model.AuthorAvatar, null)" src="@Directories.GetUserAvatarFullPath(Model.AuthorAvatar,null)" class="avatar lazyloaded">
						<div class="entry-author__info">
							<h6 class="entry-author__name">
								<a href="#">@Model.Author</a>
							</h6>
							<p class="mb-0">@Model.AuthorBio</p>
						</div>
					</div>
					<div class="entry__share">
						<div class="sticky-col">
							<div class="socials socials--rounded socials--large">
								<a class="social social-facebook" href="#" title="facebook" target="_blank" aria-label="facebook">
									<i class="ui-facebook"></i>
								</a>
								<a class="social social-twitter" href="#" title="twitter" target="_blank" aria-label="twitter">
									<i class="ui-twitter"></i>
								</a>
								<a class="social social-google-plus" href="#" title="google" target="_blank" 
								   aria-label="google">
									<i class="ui-google"></i>
								</a>
								<a class="social social-pinterest" href="#" title="pinterest" target="_blank" aria-label="pinterest">
									<i class="ui-pinterest"></i>
								</a>

								<p> : با دوستان خود به اشتراک بگذارید</p>
							</div>
						</div>
					</div>

					<partial name="Blog/_RelatedBlogsPartial" model="Model.RelatedBlogs"/>

				</article>


				<div id="respond" class="comment-respond">
					<div class="title-wrap">
						<h5 class="comment-respond__title section-title">دیدگاه شما</h5>
					</div>
					<form id="formComment" class="comment-form" method="post" action="/Comment/Create">
						<input type="hidden" name="ownerId" value="@Model.Id" />
						<input type="hidden" name="commentFor" value="@CommentFor.بلاگ" />
						<input type="hidden" id="parentIdComment" name="parentId"  />
						<p class="comment-form-comment">
							<label id="labalFullNameComment" for="comment">دیدگاه</label>
							<textarea id="textComment" name="text" rows="5"></textarea>
							<span class="text-danger" id="textCommentValid"></span>
						</p>

						<div class="row row-20">
							@if (User.Identity.IsAuthenticated)
							{
								<div class="col-lg-6">
									<label for="name">نام کامل: *</label>
									<p > @userFullName</p>
									<input name="fullName" id="fullNameComment" value="@userFullName" type="hidden">
									<span class="text-danger" id="fullNameCommentValid"></span>
								</div>
							}
							else
							{
								<div class="col-lg-6">
									<label for="name">نام کامل: *</label>
									<input name="fullName" id="fullNameComment"  type="text">
									<span class="text-danger" id="fullNameCommentValid"></span>
								</div>
							}
							
							<div class="col-lg-6">
								<label for="comment">ایمیل: </label>
								<input name="email" id="emailComment" type="text">
								<span class="text-danger" id="emailCommentValid"></span>
							</div>
						</div>

                     
					</form>
					<p class="comment-form-submit">
						<button type="button" class="btn btn-lg btn-color btn-button"
						        onclick="submitComment()">
							ارسال دیدگاه
						</button>
					</p>

				</div>
				<div class="title-wrap title-wrap--line">
					<h3 class="section-title" id="h3CommentCount"></h3>
				</div>
				<ul class="comment-list" id="CommentParentList">
                        
                       
				</ul>
				<div class="col-12 text-center" id="getMoreCommentDiv">

				</div>
			}
			else
			{
				<h2 class="text-bold">متاسفانه در مورد این مقاله مشکلی وجود دارد....ضمن عرض پوزش لطفا مشکل را به ما اطلاع دهید تشکر از شما...</h2>
			}
	

		</div> <!-- end content box -->
	</div>

	<aside class="col-lg-4 sidebar sidebar--right">


		@await Component.InvokeAsync("PopularBlogs")
		<partial name="Blog/_BlogNewsLetter"/>
		@await Component.InvokeAsync("BlogLeftBaner")

	</aside>
</div>

@section Scripts {
	
	
	<script>
		$(function () {
			GetComments("@Model.Id", "1", 1);
		});

		var ownerId = @Model.Id;
		var pageId = 1;

		
	</script>
}
