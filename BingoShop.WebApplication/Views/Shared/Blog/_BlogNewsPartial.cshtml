@using Shared.Application.Utility
@using BingoShop.WebApplication.Utility
@model Blogs1.Application.Contract.BlogService.Query.FilteredBlogQueryModel
@{

}

@if (Model.Blogs.Any())
{
	<div id="PostsTarget" class="col-lg-8 blog__content mb-72">
		<section class="section">
			<div class="title-wrap title-wrap--line">
				<h3 class="section-title">اخبار  سایت</h3>
				<a href="#" class="all-posts-url">نمایش همه</a>
			</div>
	
			@foreach (var blog in Model.Blogs)
			{
				<article class="entry card post-list">
					<div class="entry__img-holder post-list__img-holder card__img-holder" style="background-image: url(@Directories.GetBlogImageFullPath(blog.ImageName,null))">
						<a href="#" class="thumb-url"></a>
						<img src="@Directories.GetBlogImageFullPath(blog.ImageName,null)" alt="@blog.ImageAlt" class="entry__img d-none">
						<a href="#" class="entry__meta-category entry__meta-category--label entry__meta-category--align-in-corner entry__meta-category--@RandomCategoryColorMaker.GenerateRandomColor()">@blog.CategoryTitle</a>
					</div>

					<div class="entry__body post-list__body card__body">
						<div class="entry__header">
							<h2 class="entry__title">
								<a href="#">@blog.Title</a>
							</h2>
							<ul class="entry__meta">
								<li class="entry__meta-author">
									<span>نویسنده:</span>
									<a href="#">@blog.Author</a>
								</li>
								<li class="entry__meta-date">
									@blog.CreateDate
								</li>
							</ul>
						</div>
						<div class="entry__excerpt">
							<p>@blog.Summary</p>
						</div>
					</div>
				</article>
			}

		</section>
		<!-- Pagination -->
		@if (Model.TotalPages > 1)
		{
			<nav class="pagination">
		
				@if (Model.CurrentPage > 1)
				{
					<a href="javascript:void(0)" onclick="AjaxBlogPagination('@(Model.CurrentPage-1)')" class="pagination__page pagination__icon pagination__page--next"><i class="ui-arrow-right"></i></a>
				}
				@for (var i = Model.StartPage; i <= Model.EndPage; i++)
				{
					<a href="javascript:void(0)" onclick="AjaxBlogPagination('@i')" class="pagination__page @((Model.CurrentPage == i ? "pagination__page--current" : ""))">@i</a>
				}
				@if (Model.CurrentPage < Model.TotalPages)
				{
					<a href="javascript:void(0)" onclick="AjaxBlogPagination('@(Model.CurrentPage+1)')" class="pagination__page pagination__icon pagination__page--next"><i class="ui-arrow-left"></i></a>
				}
		
			</nav>
		}
	</div>
}
	

	


 